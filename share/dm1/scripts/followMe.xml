<application>
<name>followMe App</name>
    <module>
        <name>dm1</name>
        <node>/head</node>
    </module>

    <module>
        <name>launchManipulation</name>
        <parameters>--from launchManipulation-fakeArms.ini</parameters>
        <node>/manipulation</node>
    </module>
    <module>
        <name>ec1</name>
        <node>/manipulation</node>
    </module>
    <connection>
        <from>/dm1/command:o</from>
        <to>/ec1/dm/command:i</to>
    </connection>

    <module>
        <name>yarpdev</name>
        <parameters>--device OpenNI2DeviceServer --noMirror --depthVideoMode 4 --colorVideoMode 9</parameters>
        <node>/head</node>
    </module>
    <module>
        <name>cvFaces</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /cvFaces</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/cvFaces/state:o</from>
        <to>/ec1/cv/state:i</to>
    </connection>

    <module>
        <name>yarpview</name>
        <parameters>--name /faces/yarpview/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/cvFaces/img:o</from>
        <to>/faces/yarpview/img:i</to>
    </connection>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c sr1</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/sr1:o</from>
        <to>/dm1/sr:i</to>
    </connection>

    <module>
        <name>/sbin/runuser</name>
        <parameters>-l teo -c iSpeak</parameters>
        <node>/head</node>
    </module>
    <connection>
        <from>/dm1/tts:o</from>
        <to>/iSpeak</to>
    </connection>

</application>

